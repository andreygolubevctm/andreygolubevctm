    <build>
        <plugins>
            <plugin>
                <groupId>org.jasig.mojo.jspc</groupId>
                <artifactId>jspc-maven-plugin</artifactId>
                <version>${jspc-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <defaultSourcesDirectory>${project.basedir}/WebContent</defaultSourcesDirectory>
                            <inputWebXml>${project.basedir}/WebContent/WEB-INF/web.xml</inputWebXml>
                            <outputWebXml>${project.build.directory}/web-jsp-compiled.xml</outputWebXml>
                            <compile>false</compile>
                        </configuration>
                    </execution>
                </executions>
                <!-- Use the Tomcat 7 JSP compiler -->
                <dependencies>
                    <dependency>
                        <groupId>org.jasig.mojo.jspc</groupId>
                        <artifactId>jspc-compiler-tomcat7</artifactId>
                        <version>${jspc-maven-plugin.version}</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <!-- creating the artifact is done by ant -->
                    <execution>
                        <id>skip-war</id>
                        <phase>none</phase>
						<goals>
                            <goal>war</goal>
                        </goals>
                    </execution>
                    <!-- create as exploded war that ant will do the rest of the build will be completed in ant -->
                    <execution>
                        <id>war-exploded</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exploded</goal>
                        </goals>
						<configuration>
							<warSourceDirectory>WebContent</warSourceDirectory>
							<warSourceExcludes>WEB-INF/lib/*.jar</warSourceExcludes>
						</configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <ant antfile="build_environment.xml" target="build.${build.environment}">
                                    <property name="classes.output.dir" value="${project.build.outputDirectory}"/>
                                    <property name="svn.revision" value="${bamboo_repository_revision_number}"/>
                                    <property name="web.dir" value="${project.build.directory}/${project.build.finalName}"/>
                                    <property name="deploy.config.dir" value="${basedir}/deploy-config"/>
                                    <property name="war.dir" value="${project.build.directory}"/>
                                    <property name="war.filename" value="${project.build.finalName}.war"/>
                                </ant>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <testSourceDirectory>${project.basedir}/test</testSourceDirectory>
        <sourceDirectory>${project.basedir}/src</sourceDirectory>

    </build>


